<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_above="@+id/timer">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multiple"
            android:id="@+id/btn_multi_pre_btn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:id="@+id/btn_previous_btn"
            android:layout_marginLeft="-90dp"
            android:layout_marginTop="40dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/btn_next_btn"
            android:layout_marginTop="40dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single"
            android:id="@+id/btn_single_btn"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="-90dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Video"
            android:id="@+id/btn_playVideo_btn"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="0dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:id="@+id/btn_select_btn"
            android:layout_marginLeft="-100dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select All"
            android:id="@+id/btn_select_all_btn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/btn_delete_btn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download"
            android:id="@+id/btn_download_btn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Video"
            android:id="@+id/btn_stop_btn"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="-280dp" />
    </LinearLayout>

    <TextureView
        android:id="@+id/video_previewer_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/linearLayout"
        android:layout_marginTop="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"
        android:id="@+id/linearLayout">
        <Button
            android:id="@+id/btn_capture"
            android:layout_width="0dp"
            android:layout_weight="0.55"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="Capture"
            android:textSize="12sp"/>

        <ToggleButton
            android:id="@+id/btn_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Start Record"
            android:textOff="Start Record"
            android:textOn="Stop Record"
            android:layout_weight="0.62"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:checked="false" />

        <Button
            android:id="@+id/btn_shoot_photo_mode"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Shoot Photo Mode"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/btn_record_video_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Record Video Mode"
            android:layout_weight="0.54"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/btn_playback_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playback Mode" />

    </LinearLayout>

    <TextView
        android:id="@+id/timer"
        android:layout_width="150dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/video_previewer_surface"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text=""
        android:id="@+id/preview_button1"
        android:layout_alignTop="@+id/timer"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text=""
        android:id="@+id/preview_button5"
        android:layout_below="@+id/preview_button1"
        android:layout_alignStart="@+id/preview_button1"
        android:layout_marginTop="-10dp"
        android:background="@android:color/transparent"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text=""
        android:id="@+id/preview_button6"
        android:layout_toEndOf="@+id/preview_button5"
        android:layout_alignBottom="@+id/preview_button5"
        android:layout_marginLeft="-5dp"
        android:background="@android:color/transparent"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text=""
        android:id="@+id/preview_button3"
        android:layout_alignTop="@+id/timer"
        android:layout_toEndOf="@+id/preview_button2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="-5dp"
        android:background="@android:color/transparent"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text=""
        android:id="@+id/preview_button4"
        android:layout_alignTop="@+id/preview_button3"
        android:layout_toEndOf="@+id/preview_button3"
        android:layout_marginLeft="-5dp"
        android:background="@android:color/transparent"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text=""
        android:id="@+id/preview_button7"
        android:layout_below="@+id/preview_button3"
        android:layout_alignStart="@+id/preview_button3"
        android:layout_marginTop="-10dp"
        android:background="@android:color/transparent"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text=""
        android:id="@+id/preview_button8"
        android:layout_below="@+id/preview_button4"
        android:layout_alignStart="@+id/preview_button4"
        android:layout_marginTop="-10dp"
        android:background="@android:color/transparent"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text=""
        android:id="@+id/preview_button2"
        android:layout_marginLeft="-5dp"
        android:background="@android:color/transparent"
        android:layout_alignBaseline="@+id/preview_button1"
        android:layout_alignBottom="@+id/preview_button1"
        android:layout_alignStart="@+id/preview_button6" />

</RelativeLayout>
